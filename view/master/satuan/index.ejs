<h4 class="text-capitalize">Master satuan</h4>
<div class="row mt-4">
    <div class="col-12">
        <div class="row">
            <div class="col-lg-6 text-end">
                <a href="/master/satuan/tambah" class="btn btn-sm btn-primary">
                    <i class="fa fa-fw fa-plus-circle"></i> satuan
                </a>
            </div>
        </div>
    </div>
    <br>
    <div class="col-12 pt-3">
        <div class="row">
            <div class="col-lg-12">
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Kode satuan</th>
                            <th>Nama satuan</th>
                            <th>Description</th>
                            <th>option</th>
                            <th>Delete</th>
                            <th>Created By</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let i=0; i < satuan.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= satuan[i].kode %></td>
                                <td><%= satuan[i].nama_satuan %></td>
                                <td><%= satuan[i].description %></td>
                                <td>
                                    <a href="/master/satuan/edit/<%= satuan[i].id %>" class="btn btn-sm btn-outline-warning">
                                        <i class="fa fa-fw fa-solid fa-edit"></i>
                                    </a>
                                </td>
                                <td>
                                    <form action="/master/satuan/delete/<%= satuan[i].id %>" method="post">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('apakah anda yakin ingin hapus <%= satuan[i].nama_satuan %>?')">
                                            <i class="fa fa-fw fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                                
                                <td><%= satuan[i].user.username  %></td>
                            </tr>
                        <% } %>
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
</div>
